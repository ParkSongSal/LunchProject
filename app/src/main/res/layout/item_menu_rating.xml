<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/writerTxt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="작성자"
                    android:textColor="@color/mainTextBoldColor"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:paddingEnd="10dp" />

                <TextView
                    android:id="@+id/replyTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="bottom"
                    android:text="너무 맛있어요!!"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">


                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:isIndicator="false"
                    android:layout_gravity="center"
                    android:max="5"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5"
                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                <!--<TextView
                    android:id="@+id/gradeTxt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:text="평점 : 4.0"
                    android:textColor="@color/mainTextBoldColor"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:paddingEnd="10dp" />-->

                <TextView
                    android:id="@+id/dateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:text="2021-11-25"
                    android:textColor="@color/mainTextBoldColor"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:paddingEnd="10dp" />


                <TextView
                    android:id="@+id/updateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수정"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:textColor="@color/colorMainDark" />

                <TextView
                    android:id="@+id/deleteTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:textColor="@color/colorMainDark" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>